<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_margin="10dp"
    android:background="#ffdfeaf1"
    android:gravity="top"
    tools:context="nanodegree.example.com.projectzero.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:gravity="center"
        android:textSize="25dp"
        android:id="@+id/text"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:background="#F08C35"
        android:id="@+id/spotifyButton"
        android:layout_below="@id/text"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:background="#F08C35"
        android:id="@+id/scoresAppButton"
        android:layout_below="@id/spotifyButton"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:background="#F08C35"
        android:id="@+id/libraryAppButton"
        android:layout_below="@id/scoresAppButton"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:background="#F08C35"
        android:id="@+id/buildItBiggerButton"
        android:layout_below="@id/libraryAppButton"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Bacon Reader"
        android:background="#F08C35"
        android:id="@+id/baconReaderButton"
        android:layout_below="@id/buildItBiggerButton"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="CapStone: My own App"
        android:background="#d73055"
        android:id="@+id/CapStoneButton"
        android:layout_below="@id/baconReaderButton"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>
</RelativeLayout>
